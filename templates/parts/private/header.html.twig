            </h3>
            <h2>
                {{ page_title }}
            </h2>
        </li>
    </ul>
    <ul class="navbar-nav right">
        <li>
            {{ 'helper.turn_off'|helper }}
        </li>
        <li class="dropdown">
            {% include 'parts/lang-dropdown.html.twig' %}
        </li>
        <li>
            <a href="{{ path('task_list_create') }}" class="btn btn-primary iconly-brokenPlus">
                {{ 'list.create_new'|trans }}
            </a>
