            <li class="dropdown">
                <a href="#" class="dropdown-toggle user-box {{ app.user.color }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.nickname|first|capitalize }}
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="btn btn-primary btn-md btn-block" href="{{ path('app_logout') }}">
