{% extends 'v1/public/base-half-screen.html.twig' %}

{% block title %}{{ 'security.reset_password'|trans }}{% endblock %}

{% block content %}
    <div class="login-form">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <h2 class="mb-3 text-center">{{ 'security.reset_password'|trans }}</h2>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}

            <button class="btn btn-primary">{{ 'security.send_pw_reset'|trans }}</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
